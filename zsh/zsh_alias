# utils
alias ll='ls -AlF --color'
alias vi='nvim'

# global alias

alias -g ...='./../..'
alias -g ....='./../../..'

alias -g C='| wc -l'
alias -g G='| grep --color=auto' 
alias -g H='| head'
alias -g T='| tail'
alias -g L='| less -R'
alias -g X='| xargs'
alias -g XG='| xargs grep --color=auto'

# function
function history-all { history -E 1 }
